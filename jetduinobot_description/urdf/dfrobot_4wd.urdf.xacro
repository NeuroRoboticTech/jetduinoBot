<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <link name="world_link" />

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.225 0.185 0.15"/>
      </geometry>
      <material name="silver" />
    </visual>
    <collision>
      <geometry>
        <box size="0.225 0.185 0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.015" iyy="0.0375" izz="0.0375" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="world_link"/>
    <child link="base_link"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>


  <!-- rear wheels -->
  <!-- right rear wheel -->
  <link name="right_rear_wheel_link">
    <visual>
      <geometry>
        <mesh filename="$(find jetduinobot_description)/meshes/wheel.dae"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.025" radius="0.029"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="5.1458e-5" iyy="5.1458e-5" izz="6.125e-5" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="right_rear_wheel_joint" type="continuous">
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="right_rear_wheel_link"/>
    <origin rpy="-1.5708 0 0" xyz="-0.0825 -0.074 -0.062"/>
  </joint>

  <!-- left rear wheel -->
  <link name="left_rear_wheel_link">
    <visual>
      <geometry>
        <mesh filename="$(find jetduinobot_description)/meshes/wheel.dae"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.025" radius="0.029"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="5.1458e-5" iyy="5.1458e-5" izz="6.125e-5" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="left_rear_wheel_joint" type="continuous">
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="left_rear_wheel_link"/>
    <origin rpy="-1.5708 0 0" xyz="-0.0825 0.074 -0.062"/>
  </joint>


  <!-- front wheels -->
  <!-- right front wheel -->
  <link name="right_front_wheel_link">
    <visual>
      <geometry>
        <mesh filename="$(find jetduinobot_description)/meshes/wheel.dae"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.025" radius="0.029"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="5.1458e-5" iyy="5.1458e-5" izz="6.125e-5" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="right_front_wheel_joint" type="continuous">
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="right_front_wheel_link"/>
    <origin rpy="-1.5708 0 0" xyz="0.0475 -0.074 -0.062"/>
  </joint>

  <!-- left front wheel -->
  <link name="left_front_wheel_link">
    <visual>
      <geometry>
        <mesh filename="$(find jetduinobot_description)/meshes/wheel.dae"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.025" radius="0.029"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="5.1458e-5" iyy="5.1458e-5" izz="6.125e-5" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="left_front_wheel_joint" type="continuous">
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="left_front_wheel_link"/>
    <origin rpy="-1.5708 0 0" xyz="0.0475 0.074 -0.062"/>
  </joint>

  <gazebo>
    <plugin name="skid_steer_drive_controller" filename="libgazebo_ros_skid_steer_drive.so">
      <leftFrontJoint>left_front_wheel_joint</leftFrontJoint>
      <rightFrontJoint>right_front_wheel_joint</rightFrontJoint>
      <leftRearJoint>left_rear_wheel_joint</leftRearJoint>
      <rightRearJoint>right_rear_wheel_joint</rightRearJoint>
      <wheelSeparation>0.148</wheelSeparation>
      <wheelDiameter>0.065</wheelDiameter>
      <robotBaseFrame>base_link</robotBaseFrame>
      <torque>20</torque>
    </plugin>
  </gazebo>

</robot>
